                    <a href="{{ path('Site_main_page', {section: section[3].slug, slug: p.slug}) }}">{{ p.title }}</a>
                {% endfor %}
                {% endif %}
            </div>
            <div class="block2">
                {% if section[4] is defined %}
                <div class="header">{{ section[4].title }}</div>
                {% for p in section[4].text %}
                    <a href="{{ path('Site_main_page', {section: section[4].slug, slug: p.slug}) }}">{{ p.title }}</a>
                {% endfor %}
                {% endif %}
            </div>
            <div class="block3">

            </div>
